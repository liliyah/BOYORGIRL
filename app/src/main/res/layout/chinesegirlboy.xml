<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:text="الجدول الصيني للحمل"
            android:textColor="@color/colorAccent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:paddingRight="10dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="قام الخبراء الصينيون بوضع هذا الجدول و هو افتراضى حيث يشير الى الشهور التى تم فيها الحمل و نوع الجنين المتوقع حيث ان ب تعنى بنت و و تعنى ولد"
            android:textColor="@color/darkblue"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"

            android:paddingRight="10dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:scaleType="fitStart"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        android:src="@drawable/chinesegirlboy" />

</LinearLayout>
</ScrollView>