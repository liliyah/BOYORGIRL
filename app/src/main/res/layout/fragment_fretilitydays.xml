<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fretilitydaysFragment">
<TextView
    android:layout_width="match_parent"
    android:textColor="@color/colorAccent"
    android:textSize="20dp"
    app:layout_constraintTop_toTopOf="parent"
    android:textStyle="bold"
    android:layout_margin="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textAlignment="center"
android:id="@+id/texttitle"
    android:text="حاسبه تخبرك بافضل اوقات العلاقه للحصول على جنينك المفضل"
    android:layout_height="wrap_content"></TextView>
    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/texttitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageview"
        android:src="@drawable/fertilitydays"
        android:layout_height="300dp"

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/darkblue"
            android:textSize="15dp"
            android:textStyle="bold"
            android:enabled="false"
            android:id="@+id/textmenstrualdatevalue"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/calendarimage"
            android:layout_weight="1"
            app:layout_constraintEnd_toStartOf="@id/textmenstrualdate"
            android:layout_height="match_parent"
android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/imageview"

            android:src="@drawable/ic_baseline_date_range_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textmenstrualdate"
android:layout_weight="2"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/darkblue"
            android:textSize="20dp"
            android:text="اول يوم فى دورتك الشهريه السابقه"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="يوم"
                android:layout_weight="2"
                android:textColor="@color/darkblue"
                android:textSize="15dp"
                android:textStyle="bold"
                android:enabled="false"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:id="@+id/spinner"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@id/textmenstrualdate"
                android:layout_height="match_parent"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/imageview"

                android:src="@drawable/ic_baseline_date_range_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textmenstrual"
                android:layout_weight="2"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/darkblue"
                android:textSize="20dp"
                android:text="مدة الدوره الشهريه"/>


        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:id="@+id/buttonfertility"
            android:padding="10dp"
            android:background="@drawable/buttonbg"
            android:textStyle="bold"
            android:text="حساب افضل اوقات الحمل"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:id="@+id/textgenderpregnency"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textovulation1"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/darkblue"

            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textovulation2"
            android:textColor="@color/darkblue"

            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textovulation3"
            android:layout_margin="10dp"
            android:textColor="@color/darkblue"

            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>